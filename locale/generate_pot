# http://wiki.maemo.org/Internationalize_a_Python_application
# maxdepth 1 means that no subdirectories will be searched
xgettext --language=Python --keyword=_ --output=algotaurus.pot `find ../. -maxdepth 1 -name "*.py"`

# POEditor supports comments only for new strings
#xgettext --language=Python --keyword=_ --add-comments=translators --output=algotaurus.pot `find ../. -maxdepth 1 -name "*.py"`

